extends layout 
block sidebar 
    h1(style='font-family:TimesNewRoman;color:green;') LocalLibrary    
    p Create a profile
block content
    form(method='POST')
        div.form-group
            label(for='username') Username: 
            input#username.form-control(type='text',name='username' required)
            label(for='password') Password: 
            input#password.form-control(type='password',name='password',placeholder='123#@!AbC',minlength='8' required )
            label(for='role') Select user type 
            select#role.form-control(name='role' required)
                option(value="user") User 
                option(value="admin") Admin

        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            //- for error in errors temporary workaround
            li!= errors.msg
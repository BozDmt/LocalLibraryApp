extends layout 

block content
    h1 #{title} : #{book.title}

    if copies.length 
        p #[strong By deleting the book the following copies will be deleted with it:]
        div(style='margin-left:20px;margin-top:20px')
            h4 Copies
            dl
                for copy in copies
                    dt
                        a(href=copy.url) #{copy.imprint}
                    dd Due back: #{copy.due_back_formatted}

    p(style='color:red') #[strong Confirm deleting this book?]

    form(method='POST')
        div.form-group        
            input#bookid.form-control(type='hidden', name='bookid', value=book._id)
        button.btn.btn-primary(type='submit') Delete 